{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock", "--no-ci"]
    },
    "version": {
      "allowBranch": ["master"],
      "conventionalCommits": true
    },
    "publish": {
      "verifyAccess": false,
      "registry": ""
    }
  },
  "npmClient": "yarn",
  "useWorkspaces": true
}
